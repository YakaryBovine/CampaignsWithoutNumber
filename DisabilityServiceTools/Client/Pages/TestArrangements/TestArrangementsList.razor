@page "/listtestarrangements"
@using DisabilityServiceTools.Shared.Models
@using DisabilityServiceTools.Shared.RequestFeatures
@using DisabilityServiceTools.Client.Repositories
@using Microsoft.AspNetCore.Components;
@using MudBlazor;
@using System.Threading.Tasks;

<MudTable ServerData="@(new Func<TableState, Task<TableData<TestArrangement>>>(GetServerData))"
          Hover="true" Breakpoint="Breakpoint.Sm" RightAlignSmall="true"
          @ref="_table" RowsPerPage="25">
  <ToolBarContent>
    <MudText Typo="Typo.h6">Test Arrangements</MudText>
    <MudSpacer />
    <MudTextField OnDebounceIntervalElapsed="OnSearch" Placeholder="Search" Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small"
                  Class="mt-0" T="string" DebounceInterval="500"></MudTextField>
  </ToolBarContent>
  <HeaderContent>
      <MudTh><MudTableSortLabel SortLabel="exam" T="TestArrangement">Exam</MudTableSortLabel></MudTh>
      <MudTh><MudTableSortLabel SortLabel="supportstaff" T="TestArrangement">Support Staff</MudTableSortLabel></MudTh>
  </HeaderContent>
  <RowTemplate>
      <MudTd DataLabel="Exam">Placeholder</MudTd>
      <MudTd DataLabel="Support Staff">@context.ReaderWriterNavigation.FirstName</MudTd>
  </RowTemplate>
  <PagerContent>
    <MudTablePager PageSizeOptions="@_pageSizeOption" RowsPerPageString="Test Arrangements per page" />
  </PagerContent>
</MudTable>

@code {
  private MudTable<TestArrangement> _table;
  private TestArrangementParameters _studentParameters = new TestArrangementParameters();
  private readonly int[] _pageSizeOption = { 25, 50, 100 };

  [Inject]
  public ITestArrangementClientRepository Repository { get; set; }

  private async Task<TableData<TestArrangement>> GetServerData(TableState state)
  {
    _studentParameters.PageSize = state.PageSize;
    _studentParameters.PageNumber = state.Page + 1;

    _studentParameters.OrderBy = state.SortDirection == SortDirection.Descending ?
        state.SortLabel + " desc" :
        state.SortLabel;

    var response = await Repository.GetTestArrangements(_studentParameters);

    return new TableData<TestArrangement>
    {
      Items = response.Items,
      TotalItems = response.MetaData.TotalCount
    };
  }

  private void OnSearch(string searchTerm)
  {
    _studentParameters.SearchTerm = searchTerm;
    _table.ReloadServerData();
  }
} 