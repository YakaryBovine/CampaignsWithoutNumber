@page "/listexams"
@using DisabilityServiceTools.Shared.Models
@using DisabilityServiceTools.Shared.RequestFeatures
@using DisabilityServiceTools.Client.Repositories
@using Microsoft.AspNetCore.Components;
@using MudBlazor;
@using System.Threading.Tasks;

<MudTable ServerData="@(new Func<TableState, Task<TableData<Exam>>>(GetServerData))"
          Hover="true" Breakpoint="Breakpoint.Sm" RightAlignSmall="true"
          @ref="_table" RowsPerPage="25">
  <ToolBarContent>
    <MudText Typo="Typo.h6">Exams</MudText>
    <MudSpacer />
    <MudTextField OnDebounceIntervalElapsed="OnSearch" Placeholder="Search" Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small"
                  Class="mt-0" T="string" DebounceInterval="500"></MudTextField>
  </ToolBarContent>
  <HeaderContent>
      <MudTh><MudTableSortLabel SortLabel="course" T="Exam">Course</MudTableSortLabel></MudTh>
      <MudTh><MudTableSortLabel SortLabel="date" T="Exam">Date</MudTableSortLabel></MudTh>
  </HeaderContent>
  <RowTemplate>
    <MudTd DataLabel="Course">@context.CourseNavigation.Code</MudTd>
    <MudTd DataLabel="Date">@context.Date</MudTd>
  </RowTemplate>
  <PagerContent>
    <MudTablePager PageSizeOptions="@_pageSizeOption" RowsPerPageString="Exams per page" />
  </PagerContent>
</MudTable>

@code {
  private MudTable<Exam> _table;
  private ExamParameters _studentParameters = new ExamParameters();
  private readonly int[] _pageSizeOption = { 25, 50, 100 };

  [Inject]
  public IExamClientRepository Repository { get; set; }

  private async Task<TableData<Exam>> GetServerData(TableState state)
  {
    _studentParameters.PageSize = state.PageSize;
    _studentParameters.PageNumber = state.Page + 1;

    _studentParameters.OrderBy = state.SortDirection == SortDirection.Descending ?
        state.SortLabel + " desc" :
        state.SortLabel;

    var response = await Repository.GetExams(_studentParameters);

    return new TableData<Exam>
    {
      Items = response.Items,
      TotalItems = response.MetaData.TotalCount
    };
  }

  private void OnSearch(string searchTerm)
  {
    _studentParameters.SearchTerm = searchTerm;
    _table.ReloadServerData();
  }
} 