@using CampaignsWithoutNumber.Shared.DataTransferObjects
@inject HttpClient HttpClient

<MudPaper Width="48%">
    <MudCard Outlined="true">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@CharacterClass.Name Arts</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudSelect T="ArtDto" Label="Choose one or more arts" MultiSelection="true"
                       OnClose="Closed" @bind-SelectedValues="CharacterClass.SelectedArts">
                @foreach (var art in CharacterClass.Arts)
                {
                    <MudSelectItem Value="@art">@art</MudSelectItem>
                }
            </MudSelect>
        </MudCardContent>
    </MudCard>
</MudPaper>