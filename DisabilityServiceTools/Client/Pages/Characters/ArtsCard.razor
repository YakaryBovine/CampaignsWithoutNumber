@using CampaignsWithoutNumber.Shared.DataTransferObjects
@inject HttpClient HttpClient

<MudCard Outlined="true">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Arts</MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        <MudSelect T="ArtDto" Label="Choose one or more arts" MultiSelection="true"
                   OnClose="Closed" @bind-SelectedValues="Character.Arts">
            @foreach (var art in Character.Classes.First().Arts)
            {
                <MudSelectItem Value="@art">@art</MudSelectItem>
            }
        </MudSelect>
    </MudCardContent>
</MudCard>