@inject HttpClient HttpClient

@using CampaignsWithoutNumber.Shared.Entities
<MudTabPanel Text="Actions">
    <MudPaper Class="d-flex align-content-start align-start flex-wrap flex-grow-1 gap-4" Elevation="0">
        @foreach (var action in Character.Actions)
        {
            <MudCard Outlined="true" class="d-inline-flex">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@action.Name</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@action.Description</MudText>
                </MudCardContent>
            </MudCard>
        }
    </MudPaper>
</MudTabPanel>