@inject HttpClient HttpClient

@using CampaignsWithoutNumber.Shared.Entities
<MudTabPanel Text="Actions">
    @foreach (var action in Character.Actions)
    {
        <MudCard Outlined="true">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@action.Name</MudText>
                </CardHeaderContent>
            </MudCardHeader>

            <MudCardContent>
                <MudText>@action.Description</MudText>
            </MudCardContent>
        </MudCard>
    }
</MudTabPanel>