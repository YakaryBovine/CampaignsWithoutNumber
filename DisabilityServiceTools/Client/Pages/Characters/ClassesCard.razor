@using CampaignsWithoutNumber.Shared.DataTransferObjects
@inject HttpClient HttpClient

<MudCard Outlined="true">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Classes</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    
    <MudCardContent>
        <MudSelect T="CharacterClassDto" ToStringFunc="@_converter" Label="Choose one or more classes" MultiSelection="true" @bind-Value="_value" @bind-SelectedValues="_selectedValues">
            @foreach (var characterClass in _characterClasses)
            {
                <MudSelectItem Value="@characterClass">@characterClass</MudSelectItem>
            }
        </MudSelect>
    </MudCardContent>
</MudCard>