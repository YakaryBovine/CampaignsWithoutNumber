@using CampaignsWithoutNumber.Shared.DataTransferObjects
@inject HttpClient HttpClient

<MudCard Outlined="true">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Classes</MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        <MudSelect T="CharacterClassDto" Label="Choose one or more classes" MultiSelection="true"
                   OnClose="Closed" @bind-SelectedValues="Character.Classes" Counter="5">
            @foreach (var characterClass in _characterClasses)
            {
                <MudSelectItem Value="@characterClass">@characterClass</MudSelectItem>
            }
        </MudSelect>
    </MudCardContent>
</MudCard>