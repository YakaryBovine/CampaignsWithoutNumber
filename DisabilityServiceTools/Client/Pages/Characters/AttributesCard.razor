<MudPaper Width="48%">
    <MudCard Outlined="true">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Attributes</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    
        <MudCardContent>
            @foreach (var characterAttribute in Attributes)
            {
                <MudNumericField @bind-Value="characterAttribute.Value" Label="@characterAttribute.Name" Variant="Variant.Text" Min="0" Max="18"/>
            }
        </MudCardContent>
    </MudCard>
</MudPaper>

