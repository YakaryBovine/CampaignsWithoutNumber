@page "/testdetails/{id:int}"
@using DisabilityServiceTools.Shared.Models
@using DisabilityServiceTools.Client.Repositories

<MudPaper Class="pa-4">
    <MudText Typo="Typo.body1">
        <strong>Course:</strong> @Test.Course.Code
    </MudText>
    <MudText Typo="Typo.body1">
        <strong>Date:</strong> @Test.DateTime
    </MudText>
    <MudText Typo="Typo.body1">
        <strong>Duration:</strong> @Test.Duration
    </MudText>
</MudPaper>

@code {
    public Test Test { get; set; } = new Test();
    [Inject]
    public ITestClientRepository Repository { get; set; }
    [Parameter]
    public int Id { get; set; }
    protected async override Task OnInitializedAsync()
    {
        Test = await Repository.GetTest(Id);
    }
} 