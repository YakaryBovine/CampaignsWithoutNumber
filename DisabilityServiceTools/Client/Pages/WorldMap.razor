@page "/worldmap"
@using Syncfusion.Blazor.Maps
@inject HttpClient HttpClient

<SfMaps>
    <MapsZoomSettings Enable="true">
        <MapsZoomToolbarSettings>
            <MapsZoomToolbarButton ToolbarItems="new List<ToolbarItem>() { ToolbarItem.Zoom, ToolbarItem.ZoomIn, ToolbarItem.ZoomOut,
    ToolbarItem.Pan, ToolbarItem.Reset }"></MapsZoomToolbarButton>
        </MapsZoomToolbarSettings>
    </MapsZoomSettings>
    <MapsLayers>
        <MapsLayer ShapeData="@_mapData" TValue="string"></MapsLayer>
    </MapsLayers>
</SfMaps>

@code {
    object? _mapData;
    protected override async Task OnInitializedAsync()
    {
        _mapData = await HttpClient.GetFromJsonAsync<object>("api/worldmap/get");
    }    
}